generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id            String   @id @default(cuid())
  wallet        String   @unique
  shards        Int      @default(0)
  highestLevel  Int      @default(0)
  forgeNonce    Int      @default(0)
  dailyStreak   Int      @default(0)
  lastDailyDay  Int      @default(0)
  referralCode  String   @unique @default(cuid())
  referredBy    String?
  referralCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  runs          Run[]
  dailyAttempts DailyAttempt[]
}

model Run {
  id          String   @id @default(cuid())
  playerId    String
  player      Player   @relation(fields: [playerId], references: [id])
  level       Int
  seed        String
  completed   Boolean  @default(false)
  shardsEarned Int     @default(0)
  timeMs      Int?
  checkpoints String?  // JSON array of checkpoint data
  createdAt   DateTime @default(now())

  @@index([playerId])
  @@index([level, completed, timeMs])
}

model ForgeLog {
  id          String   @id @default(cuid())
  wallet      String
  moduleId    Int
  amount      Int
  shardsCost  Int
  txHash      String?
  createdAt   DateTime @default(now())

  @@index([wallet])
}

model DailyChallenge {
  id          String   @id @default(cuid())
  day         Int      @unique
  levelId     Int
  modifiers   String   // JSON: { "towerTypes": ["frost"], "enemySpeedMult": 1.5, etc }
  shardReward Int
  bonusReward Int      @default(0)
  createdAt   DateTime @default(now())
  attempts    DailyAttempt[]
}

model DailyAttempt {
  id          String   @id @default(cuid())
  playerId    String
  player      Player   @relation(fields: [playerId], references: [id])
  challengeId String
  challenge   DailyChallenge @relation(fields: [challengeId], references: [id])
  completed   Boolean  @default(false)
  timeMs      Int?
  createdAt   DateTime @default(now())

  @@unique([playerId, challengeId])
  @@index([challengeId])
}

model SeasonalEvent {
  id          String   @id @default(cuid())
  name        String
  theme       String   // halloween, christmas, lunar, etc
  startDate   DateTime
  endDate     DateTime
  levels      String   // JSON array of special level configs
  rewards     String   // JSON: { moduleIds: [13, 14], shardBonus: 50 }
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model Referral {
  id          String   @id @default(cuid())
  referrer    String   // wallet of referrer
  referee     String   @unique // wallet of new user
  rewarded    Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([referrer])
}
